@model QuakeKanban.ViewModels.BoardViewModel

@{
    ViewData["Title"] = "Kanban board";
}

<div class="text-center">
    <p class="display-4">@Model.Project.Name</p>

    <div class="container-fluid">
  <div class="row">

@foreach (var taskGroup in @Model.Tasks)
{
        <div class="col px-0">
      @taskGroup.Status
    @foreach (var task in @taskGroup.Tasks)
    {
        <partial name="_Task" for=@task />
    }
    </div>
}


  </div>
</div>

</div>
